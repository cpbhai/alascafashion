], daysUpto7 = [{  label: "0 Days",  _id: null,},{  label: "1 Day",  _id: "1 Day",},{  label: "2 Days",  _id: "2 Days",},{  label: "3 Days",  _id: "3 Days",},{  label: "4 Days",  _id: "4 Days",},{  label: "5 Days",  _id: "5 Days",},{  label: "6 Days",  _id: "6 Days",},{  label: "7 Days",  _id: "7 Days",},];
%>
<%-  include("../components/layout/header")%>
<meta name="description" content="Alasca Fashion, India's Leading Fashion Store for Suits, Lehengas, Gowns, Sarees and Much More On Exclusive Price" />
<title>Add Product</title>
<link rel="stylesheet" href="/css/addProduct.css">
<script src="/js/addProduct.js"></script>
</head>
<body onload="initAddProd();">
  <%- include("../components/layout/navbar") %>
  <form class="addp-form" method="POST" action="/collection/add" enctype="multipart/form-data">
      <div>
          <select name="subcategory" onchange="alert(this.value);">
              <%locals.subcategories?.forEach((subcat)=>{%>
                <option value="<%=subcat._id%>"><%=subcat.title%></option>
              <%});%>
          </select>
      </div>
      <div>
        <input
        type="text"
        name="title"
        class="
          form-control
          block
          px-3
          py-1.5
          text-base
          font-normal
          text-gray-700
          bg-white bg-clip-padding
          border border-solid border-gray-300
          rounded
          transition
          ease-in-out
          my-2
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none
        "
        placeholder="Title"
      />
      </div>
      <div>
        <textarea
        name="description"
        class="
          form-control
          block
          px-3
          py-1.5
          text-base
          font-normal
          text-gray-700
          bg-white bg-clip-padding
          border border-solid border-gray-300
          rounded
          transition
          ease-in-out
          my-2
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none
        "
        rows="3"
        placeholder="Description"
      ></textarea>
      </div>
      <div>
        <input
        type="file"
        name="images"
        id="file-input"
        multiple
        class="
          form-control
          block
          px-3
          py-1.5
          text-base
          font-normal
          text-gray-700
          bg-white bg-clip-padding
          border border-solid border-gray-300
          rounded
          transition
          ease-in-out
          my-2
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none
        "
        placeholder="Title"
      />
      </div>
      <div id="preview"></div>
      <div>
        <select class="form-multiselect block w-full mt-1" multiple name="sizes">
          <%sizesArray.forEach((each)=>{%>
            <option value="<%=each%>"><%=each%></option>
          <%});%>
        </select>
      </div>
      <div>
        <select class="form-multiselect block w-full mt-1" multiple name="colours">
          <%coloursArray.forEach((each)=>{%>
            <option value="<%=each%>" style="background:<%=each%>;padding:10px;" ><%=each%></option>
          <%});%>
        </select>
      </div>
      <div>
        <input
        type="number"
        name="thumbnail"
        class="
          form-control
          block
          px-3
          py-1.5
          text-base
          font-normal
          text-gray-700
          bg-white bg-clip-padding
          border border-solid border-gray-300
          rounded
          transition
          ease-in-out
          my-2
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none
        "
        placeholder="Thumbnail Image"
        />
      </div>
      <div>
        <input
        type="number"
        name="inStock"
        class="
          form-control
          block
          px-3
          py-1.5
          text-base
          font-normal
          text-gray-700
          bg-white bg-clip-padding
          border border-solid border-gray-300
          rounded
          transition
          ease-in-out
          my-2
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none
        "
        placeholder="Stock Available"
        />
      </div>
      <div>
        <input
        type="text"
        name="productId"
        class="
          form-control
          block
          px-3
          py-1.5
          text-base
          font-normal
          text-gray-700
          bg-white bg-clip-padding
          border border-solid border-gray-300
          rounded
          transition
          ease-in-out
          my-2
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none
        "
        placeholder="Product Id"
        />
      </div>
      <div>
        <p>Return:</p>
        <select name="return" onchange="alert(this.value);">
            <%daysUpto7?.forEach((day)=>{%>
              <option value="<%=day._id%>"><%=day.label%></option>
            <%});%>
        </select>
      </div>
      <div>
        <p>Exchange:</p>
        <select name="exchange" onchange="alert(this.value);">
            <%daysUpto7?.forEach((day)=>{%>
              <option value="<%=day._id%>"><%=day.label%></option>
            <%});%>
        </select>
      </div>
      <div>
        <input
        type="number"
        name="cost"
        class="
          form-control
          block
          px-3
          py-1.5
          text-base
          font-normal
          text-gray-700
          bg-white bg-clip-padding
          border border-solid border-gray-300
          rounded
          transition
          ease-in-out
          my-2
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none
        "
        placeholder="Cost without discount"
        />
      </div>
      <div>
        <input
        type="number"
        name="disCost"
        class="
          form-control
          block
          px-3
          py-1.5
          text-base
          font-normal
          text-gray-700
          bg-white bg-clip-padding
          border border-solid border-gray-300
          rounded
          transition
          ease-in-out
          my-2
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none
        "
        placeholder="Cost after discount"
        />
      </div>
      <div>
        <button type="submit" class="inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out">Save</button>
      </div>
  </form>
</body>
<%-  include("../components/layout/footer")%>